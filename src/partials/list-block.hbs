<main class="list-block__outer container">
  <section class="list-block__row row">
    {{#each category as |value key|}}
      <div class="list-block__item col-12 col-sm-4">
        <div class="block">
          <a href="{{../base_url}}{{slug}}/" title="{{title}}" class="cat__title" target="_parent">
            <h3 id="category{{titleBasedId title}}">{{title}}</h3>
          </a>
          <ul>
            {{#each ../pages}}
              {{#if (eq cat_title value.title) }}
                <li>
                  <a href="{{../base_url}}{{url}}" id="category{{titleBasedId title}}" title="{{title}}" target="_parent">
                    {{title}}
                  </a>
                </li>
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    {{/each}}
  </section>
</main>
