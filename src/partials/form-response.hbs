<section class="form--error container-md text-center" style="display:none">
  <br><br>
  <h3 class="text-danger">Whoops. There was an error.</h3>
  <br />
  <p>
    Try sending an email to
    <a class="support_link" href="mailto:support@myetherwallet?Subject=Need%20Support&Body=%0A%0A%0A%0Aps%3A%20I%20couldn%27t%20send%20via%20the%20form.%20I%20got%20an%20error%20">
      support@myetherwallet.com
    </a>
    (and let them know you couldn't use the form!)
  </p>
  <br><br><br>
</section>

<section class="form--success container-sm text-center" style="display:none">
  <br><br>
  <h3 class="text-success">
    Your message has been sent. We will do our best to reply quickly. Thank you!
  </h3>
  <br><br>
</section>

<script>
  if ( getQueryString('code') == 'ok' ) {
    $('.form--success').show()
  } else if ( getQueryString('code') !== null ) {
    var error  = getQueryString('code') + ": " + getQueryString('message')
    var mailto = 'mailto:support@myetherwallet?Subject=Need%20Support&Body=%0A%0A%0A%0Aps%3A%20I%20couldn%27t%20send%20via%20the%20form.%20I%20got%20the%20error%3A%20'
    $('.form--error').show()
    $('.form--error .text-danger').after( '<p class="text-danger">' + error + '</p>' )
    $('.form--error .support_link').attr('href', mailto + error);
  }
</script>
